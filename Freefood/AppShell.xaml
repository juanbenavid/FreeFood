<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Freefood.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Freefood"
    Shell.FlyoutBehavior="Disabled">

    <ShellContent
        Title="Main Menu"
        ContentTemplate="{DataTemplate local:MainMenuPage}"
        Route="MainMenuPage"/>

    <ShellContent
        Title="Find Food"
        ContentTemplate="{DataTemplate local:FindFoodPage}"
        Route="FindFoodPage"/>
    
    <ShellContent
        Title="List Food"
        ContentTemplate="{DataTemplate local:ListPage}"
        Route="ListPage" />

    <ShellContent
        Title="FoodFormPage"
        ContentTemplate="{DataTemplate local:FoodFormPage}"
        Route="FoodFormPage" />

    <ShellContent
        Title="FeaturePage"
        ContentTemplate="{DataTemplate local:FeaturePage}"
        Route="FeaturePage" />

</Shell>
