<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
             x:Class="Freefood.RouteNavigationPage"
             Title="Navigation">
    <Grid>
        <esri:MapView x:Name="NavigationMapView" Map="{Binding Map}" />
        <ActivityIndicator IsRunning="true" x:Name="activityIndicator" ScaleX="0.5" ScaleY="0.5" />
        <Grid Padding="5"
                  MaximumWidthRequest="200"
                  RowDefinitions="*, *, *, *"
                  ColumnDefinitions="*, *, *, *"
                  RowSpacing="5">

            <ImageButton Source="recenter.svg"
                             x:Name="NavigationButton"
                             Grid.Row="4"
                             Grid.Column="4"
                             VerticalOptions="End"
                             Margin="10,32"
                             HeightRequest="90"
                             WidthRequest="90"
                             Clicked="NavigationButton_Clicked"
                             BackgroundColor="White"
                             CornerRadius="40"
                             Padding="8"
                             />

            <Label x:Name="MessagesTextBlock" Text="" IsVisible="false"/>

        </Grid>

    </Grid>
</ContentPage>